@page
@model LifeStyle.Pages.Clientes.IndexModel
@{
}

<br />
<h2>Lista de Clientes</h2>
<a class="btn btn-success btn-sm" href="/Clientes/Create">Cadastrar Cliente</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Telefone</th>
            <th>Data de Modificação</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListClientes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td>@item.Rg</td>
                <td>@item.Email</td>
                <td>@item.Telefone</td>
                <td>@item.Created_at</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Clientes/Edit?id=@item.Id">Atualizar</a>
                    <a class="btn btn-danger btn-sm" href="/Clientes/Delete?id=@item.Id">Excluir</a>
                </td>
            </tr>   
        }
    </tbody>
</table>